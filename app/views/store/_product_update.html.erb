<%= turbo_frame_tag(dom_id(product)) do %>
  <li class='flex mb-6 mt-3 line-item-highlight'>
    <%= button_to line_items_path(product_id: product.id), class: 'object-contain w-40 h-48 mr-6' do %>
      <%= image_tag(product.image_url) %>
    <% end %>
    <div>
        <h2 class="font-bold text-lg mb-3"> <%= product.title %> </h2>
        <p><%= sanitize(product.description) %></p>
      <div class="mt-3">
        <%= number_to_currency(product.price) %>
        </br> 
        <%= number_to_currency(product.price, unit: "JPN ￥", separator: ",", precision: 1) %>
        </br>
        <%= number_to_currency(product.price, unit: "RMB ￥", precision: 3) %>
        <%= button_to 'Add to Cart', line_items_path(product_id: product), form_class: 'inline', class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
      </div>
    </div>
  </li>
  
<% end %>